{
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier", //prettier should be always at the bottom as it does manual code works
      "prettier/react"
    ],
    "rules": {
      "react/prop-types": 0, // 0 means off
      "no-console": "warn", // 1 means warn
      "react-hooks/rules-of-hooks": 2, //2 means error
      "react-hooks/exhaustive-deps": 1
    },
    "plugins": ["react", "import", "jsx-a11y", "react-hooks"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  